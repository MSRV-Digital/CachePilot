# Redis Manager Configuration Environment Variables
# Copy this file to .env and configure for your deployment

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Security Configuration
# IMPORTANT: Generate a secure API key using: openssl rand -base64 32
API_KEY=your-secure-api-key-here

# CORS Origins (comma-separated)
# Example: https://redis-manager.example.com,https://admin.example.com
# For production, NEVER use "*"
CORS_ORIGINS=

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Logging
LOG_LEVEL=INFO
DEBUG_MODE=false

# Database/Storage
BASE_DIR=/opt/redis-mgr
TENANTS_DIR=/opt/redis-mgr/data/tenants
CA_DIR=/opt/redis-mgr/data/ca
BACKUPS_DIR=/opt/redis-mgr/data/backups
LOGS_DIR=/opt/redis-mgr/data/logs

# Network Configuration
INTERNAL_IP=localhost
PUBLIC_IP=not-configured

# Organization Information
ORG_NAME="Your Organization"
CONTACT_NAME="Administrator"
CONTACT_EMAIL="admin@example.com"
CONTACT_PHONE="not-configured"
CONTACT_WEB="https://example.com"
